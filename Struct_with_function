#include<stdio.h>
typedef struct 
{
	int cpf;
	int matricula;
	char nome[35];
	char curso[35];
}Aluno;
void include(Aluno *n);
void clean();
int main();
void search();

int main()
{
	int i = 10;
	Aluno n[i];	
	int opcao = 0;
	
	do
	{
		
		printf("[1]criar cadastro\n");
		printf("[2]apagar cadastro\n");
		printf("[3]procurar cadastro\n");
		printf("[4]encerrar\n");
		printf("entre com a opção:\n ");
		scanf("%d",&opcao);
		
		switch(opcao)
		{
			case 1 :
			{
				include(&n[i]);
				break;
			}
			case 2 :
			{
				clean();
				break;
			}
			case 3 :
			{
				search();
				break;
			}
			case 4 :
			{
				printf("encerrrando programa...");
				break;
			}
			default:
			{
				printf("opcao nao inexistente\n");
				break;
			}
		}
		
	}
	while (opcao!=4);
}
