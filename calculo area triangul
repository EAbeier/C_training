int main() {
	setlocale(LC_ALL, "Portuguese");
	int a,b,c,p,area;
	printf("Entre com os lados do trinagulo: \n");
	scanf("%d %d %d", &a, &b, &c);
	
	if ((a<b+c)&&(b<a+c)&&(c<b+a)){
		p=(a+b+c)/2;
		area = sqrt(p*(p-a)*(p-b)*(p-c));
		printf("Área total: %d", area);
	}else{
		printf("Esses Valores não formam um triângulo (SEU BURRO!)");
	
	}
}
